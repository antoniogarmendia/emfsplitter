<?xml version="1.0" encoding="UTF-8"?>
<project default="WorkFlowModularProject" name="org.mondo.generate.modular.project">
    <property name="ECLIPSE_HOME" value="../../../../../../../eclipse/java-oxygen/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="D:/EclipseWorkspaces/2.emfsplitter"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.mondo.generate.modular.project.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.mondo.generate.modular.project/bin"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/org.eclipse.jdt.compiler.tool_1.2.101.v20180329-0935/lib/java10api.jar"/>
    </path>

    <path id="org.mondo.generate.modular.project.classpath">
        <path refid="org.mondo.generate.modular.project.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.mondo.generate.modular.project.libraryclasspath.alljars">
        <pathelement location="../org.mondo.generate.modular.project/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.mondo.generate.modular.project.classpath.alljars">
        <path refid="org.mondo.generate.modular.project.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="WorkFlowModularProject">
        <java classname="org.mondo.generate.modular.project.main.WorkFlowModularProject" classpathref="org.mondo.generate.modular.project.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="WorkFlowModularProject.alljars">
        <java classname="org.mondo.generate.modular.project.main.WorkFlowModularProject" classpathref="org.mondo.generate.modular.project.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
